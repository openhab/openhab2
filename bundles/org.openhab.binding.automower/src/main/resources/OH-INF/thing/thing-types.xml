		<state pattern="%d min"/>
	</channel-type>
	<channel-type id="calendarTasksDurationType">
		<item-type unitHint="min">Number:Time</item-type>
		<label>Duration</label>
		<description>Duration time</description>
		<state pattern="%d min"/>
	</channel-type>
